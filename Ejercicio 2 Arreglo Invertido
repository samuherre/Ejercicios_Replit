public class Main {
  public static void main(String[] args) {
    int arr[] = new int[5];
    int arr2[] = new int[5];

    System.out.println("Arreglo 1: ");
    for (int i = 0; i < 5; i++){
          arr[i] = i+1;
          System.out.println(arr[i]);
    }

    System.out.println("Arreglo 2: ");
    for (int i = 0; i < 5; i++){
          arr2[i] = arr[4 - i];
          System.out.println(arr2[i]);
    }
  }
}
