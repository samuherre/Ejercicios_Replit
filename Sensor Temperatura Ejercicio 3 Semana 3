  import java.util.Scanner;
  class Main {
  public static void main(String[] args) {
  Scanner teclado = new Scanner(System.in);
  // Definir variables
  float temperatura_actual;

  // Ingreso de datos
  System.out.println("¿Cuántos grados de temperatura hace actualmente?");
  temperatura_actual = teclado.nextFloat();

  // Procesamiento de datos
  if (temperatura_actual > 27){
    System.out.println("¡Alerta de calor!");
  }
  else if (temperatura_actual < 15){
    System.out.println("¡Alerta de frío!");
  }
  else 
    System.out.println("Temperatura templada.");
  } 
}
